  "license": "MIT",
  "private": false,
  "bugs": {
    "url": "https://github.com/daniseijo/domain-to-url/issues"
  },
  "devDependencies": {
    "@types/jest": "^24.0.10",
    "jest": "^24.3.1",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  }
